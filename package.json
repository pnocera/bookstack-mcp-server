{
  "name": "bookstack-mcp-server",
  "version": "1.0.0",
  "description": "MCP server providing comprehensive access to BookStack knowledge management system",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "docker:build": "docker build -t bookstack-mcp-server .",
    "docker:run": "docker run -p 3000:3000 bookstack-mcp-server"
  },
  "keywords": [
    "mcp",
    "bookstack",
    "api",
    "server",
    "claude",
    "context",
    "documentation"
  ],
  "author": "BookStack MCP Integration",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "zod": "^3.22.4",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.3",
    "@types/uuid": "^9.0.5",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "bin": {
    "bookstack-mcp-server": "./dist/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    ".env.example"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pnocera/bookstack-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/pnocera/bookstack-mcp-server/issues"
  },
  "homepage": "https://github.com/pnocera/bookstack-mcp-server#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}